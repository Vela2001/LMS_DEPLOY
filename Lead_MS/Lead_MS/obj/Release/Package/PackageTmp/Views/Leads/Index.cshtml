@model List<Lead_MS.Models.LEADS>
@{
    ViewBag.Title = "Index";
}

<h2 class="card text-center">
    Mantenimiento de Leads
</h2>
<br />
<div class="text-start">
    <a href="~/Leads/AgregarEditar/" class="btn btn-success">Nuevo Lead</a>
</div>
<br />
<br />

@using (Html.BeginForm("Index", "Leads", FormMethod.Post))
{
    <div class="text-end">
        @Html.Label("Buscar: ")
        @Html.TextBox("Buscar")
        <button type="submit" class="btn btn-dark">Buscar</button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th style="width: 50px">Id</th>
            <th style="width: 150px">Nombre</th>
            <th style="width: 150px">Email</th>
            <th style="width: 100px">Teléfono</th>
            <th style="width: 100px">Empresa</th>
            <th style="width: 100px">Cargo</th>
            <th style="width: 100px">Fuente de Entrada</th>
            <th style="width: 100px">Fecha de Creación</th>
            <th style="width: 100px">Estado</th>
            <th style="width: 250px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.ID</td>
                <td>@lead.NOMBRE</td>
                <td>@lead.EMAIL</td>
                <td>@lead.TELEFONO</td>
                <td>@lead.EMPRESA</td>
                <td>@lead.CARGO</td>
                <td>@lead.FUENTE_ENTRADA</td>
                <td>@lead.FECHA_CREACION.ToString("dd/MM/yyyy")</td> <!-- Formato de fecha -->
                <td>@lead.ESTADO</td>
                <td>
                    <a href="~/Leads/Visualizar/@lead.ID" class="btn btn-info">Visualizar</a>
                    <a href="~/Leads/AgregarEditar/@lead.ID" class="btn btn-warning">Modificar</a>
                    <a href="~/Leads/Eliminar/@lead.ID" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar el registro?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
