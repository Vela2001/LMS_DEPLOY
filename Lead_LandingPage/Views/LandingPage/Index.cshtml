@model Lead_LandingPage.Models.LEADS
@{
    ViewData["Title"] = "Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/Source/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Source/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Source/js/jquery-3.7.1.min.js"></script>
</head>
<body>
    <header class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Bienvenido a Nuestra Página</h1>
            <p class="lead">Esta es una landing page simple creada con Bootstrap y ASP.NET</p>
        </div>
    </header>

    <!-- Slider -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Imagenes/ec1.jpg" alt="Primera imagen">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Imagenes/ec2.jpg" alt="Primera imagen">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Imagenes/ec3.jpg" alt="Primera imagen">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>

    <!-- Sección 1 -->
    <section class="py-5">
        <div class="container">
            <div class="mb-4">
                <h2>Característica 1</h2>
                <p>Descripción de la característica 1.</p>
            </div>
            <div class="mb-4">
                <h2>Característica 2</h2>
                <p>Descripción de la característica 2.</p>
            </div>
            <div class="mb-4">
                <h2>Característica 3</h2>
                <p>Descripción de la característica 3.</p>
            </div>
        </div>
    </section>

    <!-- Sección 2 -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="mb-4">
                <h2>Sección 1</h2>
                <p>Descripción de la sección 1.</p>
            </div>
            <div class="mb-4">
                <h2>Sección 2</h2>
                <p>Descripción de la sección 2.</p>
            </div>
        </div>
    </section>

    <!-- Formulario de Registro -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center">Regístrate</h2>
            @using (Html.BeginForm("GuardarLP", "LandingPage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.ID)

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.NOMBRE, "Nombre")
                        @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control", placeholder = "Tu nombre" })
                        @Html.ValidationMessageFor(x => x.NOMBRE)
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.EMAIL, "Email")
                        @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", placeholder = "Example@gmail.com" })
                        @Html.ValidationMessageFor(x => x.EMAIL)
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.EMPRESA, "Tu Empresa")
                        @Html.TextBoxFor(x => x.EMPRESA, new { @class = "form-control", placeholder = "Navigator S.A." })
                        @Html.ValidationMessageFor(x => x.EMPRESA)
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(x => x.TELEFONO, "Nro. Telefono")
                        @Html.TextBoxFor(x => x.TELEFONO, new { @class = "form-control", placeholder = "987654321" })
                        @Html.ValidationMessageFor(x => x.TELEFONO)
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
            }

            <!-- Modal de Registro Exitoso -->
            <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="successModalLabel">Registro Exitoso</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            ¡El registro se ha realizado con éxito!
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p class="mb-0">© 2024 Tu Compañía. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script src="~/Source/js/bootstrap.min.js"></script>
<script src="~/Source/js/bootstrap.bundle.min.js"></script>
</html>

