@model List<Lead_MS.Models.USUARIOS>
@{
    ViewBag.Title = "AgregarEditar";
}

<div class="text-center">
    <h2>Agregar/Editar Lead</h2>
</div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="~/Leads/Index">Leads</a></li>
        <li class="breadcrumb-item active" aria-current="page">@(Model.ID > 0 ? Model.NOMBRE : "Nuevo Registro")</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        Información del Lead
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Guardar", "Leads", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.ID)
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Email")
                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Teléfono")
                @Html.TextBoxFor(x => x.TELEFONO, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TELEFONO, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Empresa")
                @Html.TextBoxFor(x => x.EMPRESA, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EMPRESA, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Cargo")
                @Html.TextBoxFor(x => x.CARGO, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CARGO, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Fuente de Entrada")
                @Html.TextBoxFor(x => x.FUENTE_ENTRADA, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.FUENTE_ENTRADA, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Fecha de Creación")
                @Html.TextBoxFor(x => x.FECHA_CREACION, "{0:dd/MM/yyyy HH:mm:ss}", new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Estado")
                <select name="ESTADO" class="form-control">
                    <option @(Model.ESTADO == "" ? "selected" : "") value="">-Seleccione</option>
                    <option @(Model.ESTADO == "Nuevo" ? "selected" : "") value="Nuevo">-Nuevo</option>
                    <option @(Model.ESTADO == "En Proceso" ? "selected" : "") value="En Proceso">-En Proceso</option>
                    <option @(Model.ESTADO == "Cerrado" ? "selected" : "") value="Cerrado">-Cerrado</option>
                </select>
                @Html.ValidationMessageFor(x => x.ESTADO, null, new { @class = "label label-danger" })
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Grabar</button>
                <a href="~/Leads" class="btn btn-danger">Cancelar</a>
            </div>
        }
    </div>
</div>
