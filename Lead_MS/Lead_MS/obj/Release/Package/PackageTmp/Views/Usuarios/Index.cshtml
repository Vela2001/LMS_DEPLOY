@model List<Lead_MS.Models.USUARIOS>
@{
    ViewBag.Title = "Index";
}

<h2 class="card text-center">
    Mantenimiento de Usuarios
</h2>
<br />
<div class="text-start">
    <a href="~/Usuarios/AgregarEditar/" class="btn btn-success">Nuevo Usuario</a>
</div>
<br />
<br />

@using (Html.BeginForm("Index", "Usuarios", FormMethod.Post))
{
    <div class="text-end">
        @Html.Label("Buscar: ")
        @Html.TextBox("Buscar")
        <button type="submit" class="btn btn-dark">Buscar</button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th style="width: 50px">Id</th>
            <th style="width: 150px">Nombre Usuario</th>
            <th style="width: 150px">Email</th>
            <th style="width: 150px">Rol</th>
            <th style="width: 250px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.ID</td>
                <td>@usuario.NOMBRE_USUARIO</td>
                <td>@usuario.EMAIL</td>
                <td>@usuario.ROLES.FirstOrDefault()?.NOMBRE_ROL</td>
                <td>
                    <a href="~/Usuarios/Visualizar/@usuario.ID" class="btn btn-info">Visualizar</a>
                    <a href="~/Usuarios/AgregarEditar/@usuario.ID" class="btn btn-warning">Modificar</a>
                    <a href="~/Usuarios/Eliminar/@usuario.ID" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar el registro?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
